{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "declaration": true,
        "outDir": "./dist",
        "typeRoots": ["node_modules/@types"],
        "lib": [
            "DOM",
            "ES6"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/*.ts",
        "README.md",
        "manifest.json",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test/*.test.ts"
    ]
}